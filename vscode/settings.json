{
    "window.zoomLevel": 2,
    "go.formatTool": "goimports",
    "workbench.activityBar.visible": true,
    "workbench.statusBar.visible": true,
    "editor.minimap.enabled": false,
    "editor.folding": true,
    "editor.glyphMargin": false,
    "vim.leader": ",",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ "<leader>", "w" ],
            "after": [ ":", "w" , "<enter>"]
        },
        {
            "before": [ "<leader>", "q" ],
            "after": [ ":", "q" , "<enter>"]
        },
        {
            "before": [ "<leader>", "g" ],
            "commands": [ "workbench.action.quickOpen" ]
        },
        {
            "before": [ "<leader>", "e" ],
            "commands": [
                "workbench.view.explorer",
                // "workbench.action.nextSideBarView",
                // "workbench.action.previousSideBarView",
                "workbench.action.focusLeftGroup",
            ]
        },
        {
            "before": [ "<leader>", "b" ],
            "commands": [
                "workbench.action.toggleSidebarVisibility",
                "workbench.action.focusLeftGroup",
            ]
        },
        {
            "before": [ "<leader>", "f" ],
            "commands": [
                "editor.action.organizeImports",
                "editor.action.formatDocument",
                "editor.action.codeAction",
            ]
        },
        {
            "before": [ "<leader>", "n" ],
            "commands": [
                "editor.action.marker.nextInFiles"
            ]
        },
        {
            "before": [ "<leader>", "m" ],
            "commands": [
                "editor.action.marker.next"
            ]
        },
        {
            "before": [ "<leader>", "o" ],
            "commands": [
                "editor.action.organizeImports"
            ]
        },
        {
            "before": [ "<leader>", "h" ],
            "commands": [
                "workbench.action.focusLeftGroup",
            ]
        },
        {
            "before": [ "<leader>", "j" ],
            "commands": [
                "workbench.action.focusBelowGroup",
            ]
        },
        {
            "before": [ "<leader>", "k" ],
            "commands": [
                "workbench.action.focusAboveGroup",
            ]
        },
        {
            "before": [ "<leader>", "l" ],
            "commands": [
                "workbench.action.focusRightGroup",
            ]
        },
        {
            "before": [ "<leader>", "z" ],
            "commands": [
                "workbench.action.toggleZenMode"
            ]
        },
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.tslint": true
    },
    "vim.useSystemClipboard": true,
    "terminal.integrated.rendererType": "canvas",
    "terminal.integrated.scrollback": 500,
    "jscpd.exclude": [
        "**/*.min.js",
        "**/coverage/**",
        "**/dist/**",
        "**/test/**",
        "**/node_modules/**"
    ],
    "files.exclude": {
        "**/node_modules": false,
        "**/.nyc_output": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },
    "breadcrumbs.enabled": false,
    "files.associations": {
        "*.cjson": "jsonc",
        "*.wxss": "css",
        "*.wxs": "javascript"
    },
    "emmet.includeLanguages": {
        "wxml": "html"
    },
    "minapp-vscode.disableAutoConfig": true,
    "tslint.jsEnable": true,
    "files.autoSave": "off",
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    "todo-tree.tree.showScanModeButton": false,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": true,
    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.insert": "#111111",
    "vim.statusBarColors.normal": "#111111",
    "vim.statusBarColors.visual": "#444444",
    "vim.statusBarColors.visualblock": "#444444",
    "vim.statusBarColors.visualline": "#444444",
    "workbench.colorCustomizations": {
        "statusBar.background": "#111111",
        "statusBar.noFolderBackground": "#111111",
        "statusBar.debuggingBackground": "#111111"
    },
    "vim.statusBarColors.commandlineinprogress": "#444444",
    "go.useLanguageServer": true,
}